{
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "clean": "turbo run clean --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "changelog": "npx @changesets/cli",
    "changelog:version": "npx @changesets/cli version",
    "changelog:publish": "turbo run build && npx @changesets/cli publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.22.0",
    "prettier": "latest",
    "rimraf": "^3.0.2",
    "turbo": "latest",
    "typescript": "^4.6.3"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "packageManager": "npm@8.1.2"
}
